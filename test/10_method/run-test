#! /usr/bin/env bash

[ "${TRACE}" = 'YES' ] && set -x


run_mulle_testgen()
{
   log_fluff "####################################"
   log_fluff ${MULLE_TESTGEN} ${MULLE_TESTGEN_FLAGS} "$@"
   log_fluff "####################################"

   exekutor ${MULLE_TESTGEN} ${MULLE_TESTGEN_FLAGS} "$@"
}


test_print()
{
   local class_pointer="$1"
   local name="$2"
   local signature="$3"
   local expectfile="$4"

   local text
   local result

   [ ! -f "${expectfile}" ] && fail "\"${expectfile}\" is missing"

   if ! result="`run_mulle_testgen print "${class_pointer}" "${name}" "${signature}" `"
   then
      fail "mulle-testgen errored out"
   fi

   local diffs

   diffs="`diff -w -B <(echo "${result}") "${expectfile}" `"
   if [ ! -z "${diffs}" ]
   then
      fail "Diffs to \"${expectfile}\": ${diffs}"
   fi
}


main()
{
   MULLE_TESTGEN_FLAGS="$@"

   _options_mini_main "$@"

   test_print "NSArray" \
              "+arrayWithArray:" \
              "NSArray *,NSArray *,SEL,NSArray *" \
              ex1.txt

   log_verbose "----- #1 PASSED -----"

   test_print "NSArray" \
              "-initWithArray:" \
              "NSArray *,NSArray *,SEL,NSArray *" \
              ex2.txt
   log_verbose "----- #2 PASSED -----"

   test_print "NSArray" \
              "-subarrayWithRange:options:" \
              "NSArray *,NSArray *,SEL,NSRange,unsigned int"  \
              ex3.txt

   log_verbose "----- #3 PASSED -----"

   log_info "----- ALL PASSED -----"
}


init()
{
   MULLE_BASHFUNCTIONS_LIBEXEC_DIR="`mulle-bashfunctions-env libexec-dir`" || exit 1

   . "${MULLE_BASHFUNCTIONS_LIBEXEC_DIR}/mulle-bashfunctions.sh" || exit 1

   MULLE_TESTGEN="${MULLE_TESTGEN:-${PWD}/../../mulle-testgen}"
}


init "$@"
main "$@"

